<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/loginbackpic"
    tools:context="com.techease.pfd.Fragments.VerifyCodeFrag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:clickable="true"
                android:layout_marginTop="20sp"
                card_view:cardCornerRadius="15dp"
                card_view:cardBackgroundColor="#295786"
                card_view:cardPreventCornerOverlap="true"
                card_view:cardUseCompatPadding="true"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_gravity="center"
                android:id="@+id/cvVerifyCode">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FORGET PASSWORD"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="15sp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#129FDD"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENTER VERIFICATION CODE"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="40sp"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/etVerifyCode"
                    android:layout_width="260sp"
                    android:layout_height="50sp"
                    android:hint="ENTER CODE"
                    android:textColor="#fff"
                    android:padding="10sp"
                    android:textSize="17sp"
                    android:textColorHint="#fff"
                    android:background="@drawable/btnripple"
                    android:layout_gravity="center"
                    android:inputType="number"
                    />
                <Button
                    android:id="@+id/btnVerify"
                    android:layout_width="170sp"
                    android:layout_height="40sp"
                    android:background="@drawable/button"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="20sp"
                    android:text="VERIFY"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
