<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:orientation="horizontal">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="5sp"
        card_view:cardCornerRadius="10dp"
        card_view:cardBackgroundColor="#eee"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true"
        android:id="@+id/cardViewCustomBestDeal">
    <ImageView
        android:id="@+id/ivCustomBestDeal"
        android:layout_width="110sp"
        android:layout_height="110sp"
        android:scaleType="fitXY"
        android:background="#eee"/>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="10sp"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tvItemNameBestDeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BURGER KING"
            android:textSize="18sp"
            android:textColor="#129FDD"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvFeaturedBestDeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VALUE MEAL"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#BDBDBD"
            />
        <TextView
            android:id="@+id/tvDesBestDeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 BURGERS
FRIES, 2 DRINKS"
            android:layout_marginTop="10sp"
            android:textSize="16sp"
            android:textColor="#BDBDBD"/>

        <TextView
            android:id="@+id/tvitemPriceBestDeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ONLY ON 799/-"
            android:textSize="16sp"
            android:textColor="#BDBDBD"
            android:textStyle="bold"
            android:layout_marginTop="10sp"/>
    </LinearLayout>
<ImageView
    android:id="@+id/ivCustomBestDealFeatured"
    android:layout_width="0dp"
    android:layout_height="50sp"

    android:layout_gravity="right|center"
    android:layout_weight="0.4"
    android:layout_marginBottom="35sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="#eee"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        />
</LinearLayout>