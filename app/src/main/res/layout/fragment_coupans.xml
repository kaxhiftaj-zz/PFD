<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.techease.pfd.Fragments.CoupansFrag">
<ImageView
    android:layout_marginTop="30sp"
    android:layout_width="200sp"
    android:layout_height="200sp"
    android:src="@drawable/couponlogo"
    android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET 30% DISCOUNT"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:textSize="25sp"
        android:textColor="#295786"
        android:textStyle="bold"/>
<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/coupondark"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/useCoupan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use Coupan"
        android:textSize="18sp"
        android:textColor="#fff"
        android:layout_marginBottom="25sp"
        android:layout_gravity="center|right"
        android:layout_marginRight="40sp"

        />
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        card_view:cardBackgroundColor="#fff"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true"
        android:layout_gravity="center"
        android:layout_marginTop="25sp"
        android:id="@+id/cardViewCustomBestDeal">
        <TextView
            android:id="@+id/coupanName"
            android:layout_width="300sp"
            android:layout_height="60sp"
            android:text="PESHAWAR 2017"
            android:background="#295786"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="2sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="2sp"
            android:layout_marginBottom="2sp"
            android:layout_gravity="center"
            android:padding="15sp"
            android:gravity="center"
            android:textColor="#fff"
            />
        </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/coupansValidation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valid Upto 22 Nov, 2017"
        android:layout_gravity="bottom|center"
        android:textColor="#fff"
        android:textSize="15sp"
        android:layout_marginBottom="40sp"/>
</FrameLayout>
</LinearLayout>
