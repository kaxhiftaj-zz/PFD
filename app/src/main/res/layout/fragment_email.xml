<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/loginbackpic"
    tools:context="com.techease.pfd.Fragments.EmailFrag">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="370sp"
        android:clickable="true"
        android:layout_marginTop="20sp"
        card_view:cardCornerRadius="15dp"
        card_view:cardBackgroundColor="#295786"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_gravity="center"
        android:id="@+id/cv">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN IN"
            android:layout_gravity="center|top"
            android:layout_marginTop="15sp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#129FDD"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN TO YOUR ACCOUNT"
            android:layout_gravity="center|top"
            android:layout_marginTop="40sp"
            android:textSize="18sp"
            android:textColor="#fff"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/etUsername"
            android:layout_width="260sp"
            android:layout_height="50sp"
            android:hint="USER NAME"
            android:textColor="#fff"
            android:padding="10sp"
            android:textColorHint="#fff"
            android:textSize="15sp"
            android:background="@drawable/btnripple"
            android:layout_gravity="center"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="70sp"
            />
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="260sp"
            android:layout_height="50sp"
            android:hint="PASSWORD"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:textSize="15sp"
            android:padding="10sp"
            android:background="@drawable/btnripple"
            android:layout_gravity="center|bottom"
            android:inputType="textPassword"
            android:layout_marginBottom="150sp"
            />
        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="170sp"
            android:layout_height="40sp"
            android:background="@drawable/button"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="85sp"
            android:text="SIGN IN"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="20sp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="50sp"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO ACCOUNT YET"
            android:textColor="#fff"
            android:textStyle="bold"
            />
            <TextView
                android:id="@+id/tvSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN UP"
                android:layout_marginLeft="5sp"
                android:textSize="16sp"
                android:textColor="#129FDD"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvForgetPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FORGET PASSWORD?"
            android:layout_marginLeft="5sp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="20sp"
            android:textColor="#FFF"/>
        </android.support.v7.widget.CardView>
</LinearLayout>
    </ScrollView>
</LinearLayout>
